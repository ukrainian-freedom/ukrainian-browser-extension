{
  "author": {
    "email": "blefnk@gmail.com",
    "name": "Nazar Kornienko Blefnk",
    "url": "https://github.com/blefnk/template-browser-extension"
  },
  "dependencies": {
    "@reliverse/core": "npm:@jsr/reliverse__core",
    "tasuku": "^2.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.5.0",
    "@stylistic/eslint-plugin": "^2.2.0",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.6.1",
    "@t3-oss/env-nextjs": "^0.10.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/bun": "^1.1.4",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.2",
    "@types/semver": "^7.5.8",
    "addons-linter": "^6.30.0",
    "commander": "^12.1.0",
    "consola": "^3.2.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import-x": "^0.5.1",
    "eslint-plugin-json": "^4.0.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.4",
    "eslint-plugin-perfectionist": "^2.11.0",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-sonarjs": "^1.0.3",
    "eslint-plugin-unicorn": "^54.0.0",
    "globals": "^15.5.0",
    "knip": "^5.20.0",
    "npm-run-all": "^4.1.5",
    "semver": "^7.6.2",
    "tsx": "^4.15.5",
    "typescript": "^5.5.1-rc",
    "typescript-eslint": "^8.0.0-alpha.30",
    "typestat": "^0.7.3",
    "web-ext": "^8.1.0"
  },
  "module": "src/index.ts",
  "name": "template-browser-extension",
  "scripts": {
    "appts": "run-s knip lint build format typecheck",
    "build": "bun build ./src/index.ts --outdir ./extension/",
    "debug:eslint": "bun cross-env TIMING=12 eslint --fix .",
    "dev": "bun run src/index.ts",
    "dev:ext": "bun web-ext run --source-dir ./extension/",
    "dev:firefox": "bun run dev:ext -- --firefox=nightly",
    "format": "bun biome format --write .",
    "knip": "dotenv knip",
    "latest": "bun update --latest && bun add -D typescript@rc typescript-eslint@rc-v8",
    "lint": "bun eslint --cache --fix . && bun biome lint --write .",
    "lint:al": "bun addons-linter ./extension/",
    "lint:we": "bun web-ext lint",
    "reli:help": "bun tsx reliverse.ts --help",
    "reli:pm": "tsx reliverse.ts --pm",
    "reli:vscode": "bun tsx .vscode/presets/switcher.ts",
    "system": "envinfo --system --binaries --utilities",
    "typecheck": "tsc --noEmit",
    "typestat": "typestat --config typestat.json"
  },
  "type": "module",
  "version": "0.1.0"
}
